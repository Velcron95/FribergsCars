@page
@model FribergsCars.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/CarDetails.css" />

<div class="details-container">
    <h1>Details</h1>
    <table class="details-table">
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.Car.Brand)</td>
            <td>@Html.DisplayFor(model => model.Car.Brand)</td>
        </tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.Car.Model)</td>
            <td>@Html.DisplayFor(model => model.Car.Model)</td>
        </tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.Car.Description)</td>
            <td>@Html.DisplayFor(model => model.Car.Description)</td>
        </tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.Car.Price)</td>
            <td>@Html.DisplayFor(model => model.Car.Price)$/Day</td>
        </tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.Car.Available)</td>
            <td>@Html.DisplayFor(model => model.Car.Available)</td>
        </tr>
    </table>
    <div class="img-container">
        @if (!string.IsNullOrEmpty(Model.Car.ImagePath))
        {
            <img src="@Url.Content(Model.Car.ImagePath)" alt="Car Image" class="img-fluid" style="max-width: 500px; max-height: auto;" />
        }
        else
        {
            <p>No image available</p>
        }
    </div>
    <div class="links-container">
        
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

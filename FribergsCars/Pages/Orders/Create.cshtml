@page
@model FribergsCars.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display: none;">
                <label asp-for="Model.CarId" class="control-label"></label>
                <input asp-for="Model.CarId" class="form-control" readonly />
                <span asp-validation-for="Model.CarId" class="text-danger"></span>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Model.StartDate)
                @Html.TextBoxFor(model => model.Model.StartDate, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Model.StartDate)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Model.EndDate)
                @Html.TextBoxFor(model => model.Model.EndDate, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Model.EndDate)
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




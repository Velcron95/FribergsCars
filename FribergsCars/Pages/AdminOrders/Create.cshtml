@page
@model FribergsCars.Pages.AdminOrders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Order</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

   
    <div class="form-group">
        <label asp-for="Order.CarId"></label>
        <select asp-for="Order.CarId" asp-items="@(Model.CarList)" class="form-control">
            <option value="">Select Car</option>
        </select>
        <span asp-validation-for="Order.CarId" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="Order.UserId"></label>
        <select asp-for="Order.UserId" asp-items="@(Model.UserList)" class="form-control">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="Order.UserId" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="Order.StartDate"></label>
        <input asp-for="Order.StartDate" type="date" class="form-control" />
        <span asp-validation-for="Order.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Order.EndDate"></label>
        <input asp-for="Order.EndDate" type="date" class="form-control" />
        <span asp-validation-for="Order.EndDate" class="text-danger"></span>
    </div>


    

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@page
@model FribergsCars.Pages.AdminCars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/CarDelete.css" />
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <table class="car-details-table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Car.Brand)</th>
            <td>@Html.DisplayFor(model => model.Car.Brand)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Car.Model)</th>
            <td>@Html.DisplayFor(model => model.Car.Model)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Car.Description)</th>
            <td>@Html.DisplayFor(model => model.Car.Description)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Car.Available)</th>
            <td>@Html.DisplayFor(model => model.Car.Available)</td>
        </tr>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Car.CarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
